<%- include('../blocks/head') -%>
<body>
  <%- include('../blocks/header') -%>

  <form class="login-container" action="/auth/sign-up" method="POST">
    <h1>Sign up</h1>
    <input type="text" class="username" placeholder="Enter the username" />
    <input type="password" class="password" placeholder="Enter the password" />
    <button type="submit" class="sign-button">Sign up</button>
    <p>
      Have an account?
      <a href="/sign-in">Sign in</a>
    </p>
  </form>
  <!-- <script src="https://cdn.jsdelivr.net/npm/jwt-decode@3.1.2/build/jwt-decode.min.js"></script> -->
  <script src="/js/signup.js"></script>
  <%- include('../blocks/footer') -%>
  <%- include('../blocks/end') -%>